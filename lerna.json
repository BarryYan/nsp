{
  "useWorkspaces": true,
  "version": "0.0.3",
  "packages": [
    "packages/*"
  ],
  "command": {
    "publish": {
      "conventionalCommits": true,
      "registry": "https://registry.npmjs.org"
    }
  },
  "changelog": {
    "labels": {
      "feature": ":sparkles: New Feature",
      "enhancement": ":rocket: Enhancement",
      "bug": ":bug: Bug Fix",
      "docs": ":book: Documentation"
    }
  },
  "npmClient": "yarn"
}
